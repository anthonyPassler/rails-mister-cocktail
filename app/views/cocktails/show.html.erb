<div class="wrapper">

 <% if @cocktail.photo.attached? %>
   <div class="cocktail-img" style="background-image: url('<%= cl_image_path(@cocktail.photo.key)  %>')"></div>
 <% else %>
   <div class="cocktail-img" style="background-color: red;')"></div>
 <% end %>

  <div class="cocktail-container">
    <div class="cocktail-header">
      <h1><%= @cocktail.name %></h1>
      <div>
        <%= link_to "Back", root_path,  class: "btn btn-danger" %>
      </div>
    </div>
      <% @cocktail.doses.each do |dose| %>
        <div>
          <p> <strong><%= dose.ingredient.name %> </strong> <%= dose.description %> <%= link_to "ðŸ—‘", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %> </p>
