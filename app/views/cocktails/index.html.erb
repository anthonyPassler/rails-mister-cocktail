
<div class="banner">
  <div class="container">
    <h1>Cocktail Collection</h1>
    <%= link_to "Create new cocktail", new_cocktail_path, class: "btn btn-ghost" %>
    <a href="#cocktails" class="arrow-btn"><i class="fas fa-arrow-down"></i></a>
  </div>
</div>


<div id="cocktails" class="container">
  <h2>All Cocktails</h2>
  <div class="cocktails-container">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
        <% cocktail_path = cocktail.photo.key %>
        <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-category", style: "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(#{cl_image_path(cocktail_path)})" %>
      <% else %>
      <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-category"%>
      <% end %>
    <% end %>
  </div>
</div>


